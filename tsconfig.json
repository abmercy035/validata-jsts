{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "declaration": true,
        "emitDeclarationOnly": true,
    "outDir": "dist",
    "strict": true
  },
  "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
